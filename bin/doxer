#!/usr/bin/env node

var program = require('commander')
  , doxer = require('../lib/doxer');

program
  .version('0.0.1')
  .option('-t, --title [title]', 'Doxer title, default is the file name')
  .parse(process.argv);

var options = {
      title: program.title,
      files: program.args
    };
    
doxer.process(options);